<div class="max-w-7xl mx-auto sm:px-6 lg:px-8">
  <div class="bg-white overflow-hidden shadow-xl sm:rounded-lg mt-12">

    <table class="table-fixed w-full">
      <thead>
        <tr class="bg-blue-500 text-white">
          <th class="w-20 py-4 ...">Id</th>
          <th class="w-20 py-4 ...">Hora</th>
          <th class="w-1/4 py-4 ...">Cantidad</th>
          <th class="w-1/2 py-4 ...">Medicamento</th>      
          <th class="w-1/2 py-4 ...">Nombre Comun</th>   
          <th class="w-28 py-4 ...">Acciones</th>    
        </tr>
      </thead>
      <tbody>
        {{#each tasks}}
        <tr>
          <td class="py-3 px-6">{{id}}</td>
          <td class="py-3 px-6">{{hora}}</td>
          <td class="p-3 text-center">{{cantidad}}</td>
          <td class="p-3 text-center">{{medicamento}}</td>
          <td class="p-3 text-center">{{nombre_Comun}}</td>
          <td class="p-3 flex">           
            <a href="/tasks/delete/{{id}}" class="bg-red-500 text-white px-3 py-1 rounded-sm">
              <i class="fas fa-trash"></i></a>
            <a href="/tasks/edit/{{id}}" class="bg-blue-500 text-white px-3 py-1 rounded-sm">
              <i class="fas fa-pen"></i></a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>